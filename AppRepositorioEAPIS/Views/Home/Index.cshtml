@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background: linear-gradient(to left, #002366, #000111 );
        color: white; 
    }

    #carrusel {
        border-radius: 20px;
        max-width: 600px; 
        max-height: 400px; 
        margin: auto;
    }

    .carousel-inner img {
        border-radius: 20px;
        width: 100%;
        height: 300px; 
        object-fit: cover; /*la imagen se ajuste al contenedor sin deformarse*/
    }

</style>

<div class="container py-4" id="caja_1" style="margin-top: 120px">
    <label style="font-weight: bold;">
        <img src="https://upload.wikimedia.org/wikipedia/commons/0/0a/ESCUDO_UNC.png" width="35px" height="50px"> &nbsp; UNIVERSIDAD NACIONAL DE CAJAMARCA
    </label>
    <div class="row">
        <div class="col-md-6">
            <h1 style="font-size: 75px; font-weight: bold;"> REPOSITORIO</h1>
            <h1 style="color:goldenrod; font-size: 75px; font-weight: bold" class="pt--1">PROFESIONAL</h1>

            <div class="mt-3">
                <a asp-action="Login_estudiantes" class="btn btn-success m-3">
                    <i class="fa-solid fa-person"></i></i>&nbsp;Estudiantes
                </a>
                <a asp-action="Login_docente" class="btn btn-dark m-3">
                    <i class="fa-solid fa-chalkboard-user"></i>&nbsp;Docentes
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div id="carrusel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carrusel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carrusel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://www.iesalc.unesco.org/wp-content/uploads/2020/09/unc-600x400.jpeg" class="d-block w-100" alt="Imagen 1">
                    </div>
                    <div class="carousel-item">
                        <img src="https://scontent.fcja2-1.fna.fbcdn.net/v/t39.30808-6/277555703_7262049310533490_1254162273066595639_n.jpg?stp=dst-jpg_p180x540&_nc_cat=103&ccb=1-7&_nc_sid=127cfc&_nc_eui2=AeHvL8DqjeU0p6XTWM-YW7AoD8u1C4RLFaoPy7ULhEsVqt_TTdb2C7KhZDBq341XbsoqtB7x-_2bu-vcbm_aCPD9&_nc_ohc=k9FRw3HfgqYQ7kNvgFMocgX&_nc_ht=scontent.fcja2-1.fna&_nc_gid=A8ElztEdNVdRQA3XiUcqkZ1&oh=00_AYDuytTg0L4B6iweUIOCSdVw1I1x6Z4c1npdXU85cfJvdg&oe=66F53C63" class="d-block w-100" alt="Imagen 2">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carrusel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Anterior</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carrusel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Siguiente</span>
                </button>
            </div>
        </div>
    </div>
</div>

