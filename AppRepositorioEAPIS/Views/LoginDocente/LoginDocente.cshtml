@{
}

<style>
    body {
        background: linear-gradient(to left, #002366, #000111 );
        color: white; 
    }

</style>

<h1 style="font-size: 75px; font-weight: bold; text-align:center"> Login</h1>
<h1 style="color:goldenrod; font-size: 75px; font-weight: bold; text-align:center" class="pt--1">Docente</h1>

<div class="d-flex justify-content-center">
    <img src="https://th.bing.com/th/id/OIP.iR-L3h8p33r7B8Dn80Lh3AHaHa?rs=1&pid=ImgDetMain
    " width="120px" height="120px" style="border-radius: 100px;">
</div>

<div class="d-flex justify-content-center">
    <form asp-action="LoginDocente" method="post" class="col-4 text-center">
        <div class="form-group mt-4">
            <label for="Email" style="font-weight: bold">Correo Electrónico:</label>
            <input type="email" class="form-control mt-2" id="Email" name="Email" required />
        </div>
        <div class="form-group mt-4">
            <label for="Contraseña" style="font-weight: bold">Contraseña:</label>
            <input type="password" class="form-control mt-2" id="Contraseña" name="Contraseña" required />
        </div>
        <div>
            <button type="submit" class="btn btn-primary mt-4">Iniciar Sesión</button>
            <a asp-action="inicio" class="btn btn-dark mt-4">
                Volver
            </a>
        </div>
    </form>
</div>


@if (ViewData["Mensaje"] != null)
{
    <div class="alert alert-danger mt-4">
        @ViewData["Mensaje"]
    </div>
}